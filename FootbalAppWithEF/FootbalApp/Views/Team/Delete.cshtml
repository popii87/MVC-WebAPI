@model FootbalApp.Models.Data.Team

    <form method="post" asp-action="DeleteTeam">
        <input asp-for="Name" hidden/>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Team</h2>
        </div>


        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-danger w-75" value="Delete" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success w-75">Back</a>
                </div>
            </div>
        </div>
    </form>
